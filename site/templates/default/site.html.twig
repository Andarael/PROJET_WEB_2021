{% extends "default/base.html.twig" %}

{% block title %} page du site {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset("css/site.css") }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    <div id="header">
        {% block header %}
            {{ render(path("header")) }}
        {% endblock %}
    </div>

    {{ include('default/_display_flashes.html.twig') }}

    <div id="menu">

        {% block menu %}
            {{ render(path("menu")) }}
        {% endblock %}
    </div>

    <div id="content">
        {% block content %} {% endblock %}
    </div>

    <div id="footer">
        {% block footer %}
            {{ include("default/_footer.html.twig") }}
        {% endblock %}
    </div>

{% endblock %}

