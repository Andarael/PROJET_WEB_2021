{% extends 'default/site.html.twig' %}

{% block title %}Liste des lignes de paniers{% endblock %}

{% block content %}
    <h1>LignePanier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>utilisateur</th>
                <th>produit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne_panier in ligne_paniers %}
            <tr>
                <td>{{ ligne_panier.id }}</td>
                <td>{{ ligne_panier.quantite }}</td>
                <td>{{ ligne_panier.utilisateur.nom }}</td>
                <td>{{ ligne_panier.produit.libelle }}</td>
                <td>
                    <a href="{{ path('ligne_panier_show', {'id': ligne_panier.id}) }}"><button>show</button></a>
                    <a href="{{ path('ligne_panier_edit', {'id': ligne_panier.id}) }}"><button>edit</button></a>
                    {{ include('ligne_panier/_delete_button.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a href="{{ path('ligne_panier_new') }}"><button>Nouveau</button></a>
    </p>
{% endblock %}
